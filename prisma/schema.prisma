// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Owner {
  id          String       @id @default(uuid())
  name        String
  email       String       @unique
  password    String
  phoneNumber String
  automobiles Automobile[]
  services    Service[]

  @@map("owners")
}

model Employee {
  id               String             @id @default(uuid())
  name             String
  email            String             @unique
  password         String
  monthWorkedHours Float
  ServiceEmployees ServiceEmployees[]

  @@map("employees")
}

model Product {
  id              String            @id @default(uuid())
  name            String
  unitValue       Float
  productAmount   Int
  description     String
  photo           String
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime?         @updatedAt @map("updated")
  ServiceProducts ServiceProducts[]

  @@map("products")
}

model Automobile {
  id        String    @id @default(uuid())
  model     String
  brand     String
  plate     String    @unique
  ownerId   String    @map("owner_id")
  owner     Owner     @relation(fields: [ownerId], references: [id])
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated")
  Service   Service[]

  @@map("automobiles")
}

model Service {
  id                 String             @id @default(uuid())
  automobileId       String             @map("automobile_id")
  ownerId            String             @map("owner_id")
  employees          ServiceEmployees[]
  products           ServiceProducts[]
  laborValue         Float              @default(0)
  productsTotalValue Float              @default(0)
  description        String
  status             String
  createdAt          DateTime           @default(now()) @map("created_at")
  updatedAt          DateTime?          @updatedAt @map("updated")
  owner              Owner              @relation(fields: [ownerId], references: [id])
  automobile         Automobile         @relation(fields: [automobileId], references: [id])

  @@map("services")
}

model ServiceProducts {
  id        String  @id @default(uuid())
  serviceId String
  productId String
  quantity  Int
  product   Product @relation(fields: [productId], references: [id])
  service   Service @relation(fields: [serviceId], references: [id])

  @@map("service_products")
}

model ServiceEmployees {
  id         String   @id @default(uuid())
  serviceId  String
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id])
  service    Service  @relation(fields: [serviceId], references: [id])

  @@map("service_employees")
}
